<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="10dp"
    android:gravity="center_horizontal"
    android:background="@drawable/s_grid_line">
    <ImageView android:id="@+id/grid_img_more" android:layout_height="wrap_content" android:layout_width="wrap_content" android:contentDescription="@string/app_name"/>
    <TextView android:id="@+id/grid_tv_more" android:layout_width="match_parent" android:gravity="center" android:layout_height="wrap_content" android:textColor="@color/black"/>
</LinearLayout>
